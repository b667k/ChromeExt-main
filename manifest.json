{
  "manifest_version": 3,
  "name": "Portal â†” ClaimCenter Automation",
  "author": "Blaine Oler & Isaac Trost",
  "version": "1.8.2",
  "description": "Opens ClaimCenter from Portal and automates claim search.",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup.html"
  },

  "permissions": ["storage", "tabs", "nativeMessaging", "clipboardWrite"],
  "host_permissions": [
    "http://erieweb/*",
    "https://erieweb/*",
    "https://cc-prod-gwcpprod.erie.delta4-andromeda.guidewire.net/*"
  ],
  "background": {
    "service_worker": "sw.js"
  },
  "content_scripts": [
    {
      "matches": [
        "http://erieweb/UnderwritingPortal/Home/ViewItem*",
        "https://erieweb/UnderwritingPortal/Home/ViewItem*"
      ],
      "js": ["portal.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://cc-prod-gwcpprod.erie.delta4-andromeda.guidewire.net/*"],
      "js": ["cc.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ]
}
